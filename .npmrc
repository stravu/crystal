# Allow pnpm to hoist packages to avoid issues with Electron
shamefully-hoist=true

# Ensure Electron binary is downloaded
ELECTRON_SKIP_BINARY_DOWNLOAD=0

# Allow postinstall scripts for trusted packages
enable-pre-post-scripts=true

# Auto-install peers to avoid version conflicts
auto-install-peers=true

# Ensure builds are approved for native modules
enable-modules-dir=true