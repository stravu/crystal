{
  "name": "crystal",
  "version": "1.0.0",
  "private": true,
  "description": "Crystal - Claude Code Commander for managing multiple Claude Code instances",
  "author": "Crystal Team",
  "license": "MIT",
  "main": "main/dist/index.js",
  "engines": {
    "node": "22.15.1",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["electron"]
  },
  "scripts": {
    "dev": "pnpm run --filter frontend dev",
    "electron-dev": "concurrently \"pnpm run --filter frontend dev\" \"wait-on http://localhost:4521 && electron .\"",
    "build": "pnpm run build:frontend && pnpm run build:main && pnpm run build:electron",
    "build:frontend": "pnpm run --filter frontend build",
    "build:main": "pnpm run --filter main build",
    "build:electron": "electron-builder",
    "build:mac": "pnpm run build:frontend && pnpm run build:main && electron-builder --mac",
    "build:win": "pnpm run build:frontend && pnpm run build:main && electron-builder --win",
    "build:linux": "pnpm run build:frontend && pnpm run build:main && electron-builder --linux",
    "build:all": "pnpm run build:frontend && pnpm run build:main && electron-builder -mwl",
    "preview": "pnpm run --filter frontend preview",
    "lint": "pnpm run -r lint",
    "typecheck": "pnpm run -r typecheck",
    "postinstall": "electron-builder install-app-deps",
    "electron:rebuild": "cd main && electron-rebuild -f -w better-sqlite3",
    "setup": "pnpm install && pnpm run build:main && pnpm run electron:rebuild"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.17",
    "@homebridge/node-pty-prebuilt-multiarch": "^0.12.0",
    "better-sqlite3": "^11.7.0",
    "bull": "^4.16.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-store": "^10.0.0",
    "express": "^4.21.2",
    "openai": "^5.1.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "electron": "^36.4.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.crystal.claudecodecommander",
    "productName": "Crystal",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main/dist/**/*",
      "frontend/dist/**/*",
      "package.json"
    ],
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "frontend/public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "frontend/public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}